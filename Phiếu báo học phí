    <script>
        const urlParams = new URLSearchParams(window.location.search);

        const dataFromURL = [
            {
                tt: urlParams.get('tt1') || "",
                qr: urlParams.get('qr1') || "",
                tenCauKien: urlParams.get('tenCauKien1') || "",
                soLuong: urlParams.get('soLuong1') || "",
                ghiChu: urlParams.get('ghiChu1') || ""
            },
            {
                tt: urlParams.get('tt2') || "",
                qr: urlParams.get('qr2') || "",
                tenCauKien: urlParams.get('tenCauKien2') || "",
                soLuong: urlParams.get('soLuong2') || "",
                ghiChu: urlParams.get('ghiChu2') || ""
            },
            // Thêm các hàng khác nếu cần
        ];

        function populateTableFromURL() {
            const tableBody = document.getElementById("tableBody");
            let html = "";

            dataFromURL.forEach(item => {
                html += `
                    <tr>
                        <td>${item.tt}</td>
                        <td>${item.qr}</td>
                        <td>${item.tenCauKien}</td>
                        <td>${item.soLuong}</td>
                        <td>${item.ghiChu}</td>
                    </tr>
                `;
            });

            tableBody.innerHTML = html;
        }

        // Gọi hàm để điền dữ liệu từ URL parameters
        populateTableFromURL();
    </script>

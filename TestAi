<body>
    <h1>Quản lý Danh sách AI</h1>
    
    <div class="form-group">
        <label for="action">Chọn hành động:</label>
        <select id="action">
            <option value="add">Thêm mới</option>
            <option value="update">Cập nhật</option>
            <option value="get">Xem danh sách</option>
        </select>
    </div>
    
    <div id="inputFields">
        <div class="form-group">
            <label for="id">ID:</label>
            <input type="text" id="id" placeholder="Nhập ID">
        </div>
        <div class="form-group">
            <label for="category">Hạng mục:</label>
            <input type="text" id="category" placeholder="Nhập hạng mục">
        </div>
        <div class="form-group">
            <label for="aiName">Tên AI:</label>
            <input type="text" id="aiName" placeholder="Nhập tên AI">
        </div>
        <div class="form-group">
            <label for="aiCode">Mã AI:</label>
            <input type="text" id="aiCode" placeholder="Nhập mã AI">
        </div>
        <div class="form-group">
            <label for="user">User:</label>
            <input type="text" id="user" placeholder="Nhập user">
        </div>
    </div>
    
    <button id="submitBtn">Gửi dữ liệu</button>
    
    <div id="result"></div>
    
    <div id="dataTable" style="display: none;">
        <h2>Danh sách AI</h2>
        <table id="aiTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Hạng mục</th>
                    <th>Tên AI</th>
                    <th>Mã AI</th>
                    <th>User</th>
                    <th>Thời gian cập nhật</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const actionSelect = document.getElementById('action');
            const submitBtn = document.getElementById('submitBtn');
            const resultDiv = document.getElementById('result');
            const dataTable = document.getElementById('dataTable');
            const aiTableBody = document.querySelector('#aiTable tbody');
            
            // Xử lý thay đổi hành động
            actionSelect.addEventListener('change', function() {
                if (this.value === 'get') {
                    document.getElementById('inputFields').style.display = 'none';
                    submitBtn.textContent = 'Lấy dữ liệu';
                } else {
                    document.getElementById('inputFields').style.display = 'block';
                    submitBtn.textContent = this.value === 'add' ? 'Thêm mới' : 'Cập nhật';
                }
            });
            
            // Xử lý gửi dữ liệu
            submitBtn.addEventListener('click', function() {
                const action = actionSelect.value;
                
                if (action === 'get') {
                    fetchData();
                } else {
                    submitData(action);
                }
            });
            
            // Hàm gửi dữ liệu
            function submitData(action) {
                const id = document.getElementById('id').value;
                const category = document.getElementById('category').value;
                const aiName = document.getElementById('aiName').value;
                const aiCode = document.getElementById('aiCode').value;
                const user = document.getElementById('user').value;
                
                if (!id || !category || !aiName || !aiCode || !user) {
                    showResult('Vui lòng điền đầy đủ thông tin', false);
                    return;
                }
                
                // Tạo chuỗi dữ liệu cách nhau bằng dấu phẩy
                const dataString = `${id},${category},${aiName},${aiCode},${user}`;
                
                // Gửi dữ liệu đến Google Apps Script
                fetch('https://script.google.com/macros/s/AKfycbwhJLYfug8v7UzIiotoNFPpekQwfcBTEN-oQHYYdFZWrkwPB8F5BE87Ir3pjec35wOT/exec', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        data: dataString
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showResult(`Thành công: ${data.message}`, true);
                        // Làm mới danh sách sau khi thêm/cập nhật
                        fetchData();
                    } else {
                        showResult(`Lỗi: ${data.message}`, false);
                    }
                })
                .catch(error => {
                    showResult(`Lỗi kết nối: ${error}`, false);
                });
            }
            
            // Hàm lấy dữ liệu
            function fetchData() {
                fetch('https://script.google.com/macros/s/AKfycbwhJLYfug8v7UzIiotoNFPpekQwfcBTEN-oQHYYdFZWrkwPB8F5BE87Ir3pjec35wOT/exec?action=get')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data) {
                        displayData(data.data);
                    } else {
                        showResult(data.message || 'Không có dữ liệu', false);
                    }
                })
                .catch(error => {
                    showResult(`Lỗi khi lấy dữ liệu: ${error}`, false);
                });
            }
            
            // Hiển thị dữ liệu trong bảng
            function displayData(data) {
                dataTable.style.display = 'block';
                aiTableBody.innerHTML = '';
                
                if (Array.isArray(data)) {
                    data.forEach(item => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${item.id || ''}</td>
                            <td>${item.category || ''}</td>
                            <td>${item.aiName || ''}</td>
                            <td>${item.aiCode || ''}</td>
                            <td>${item.user || ''}</td>
                            <td>${item.updatedAt || ''}</td>
                        `;
                        aiTableBody.appendChild(row);
                    });
                    showResult(`Đã tải ${data.length} bản ghi`, true);
                } else {
                    showResult('Dữ liệu không hợp lệ', false);
                }
            }
            
            // Hiển thị kết quả
            function showResult(message, isSuccess) {
                resultDiv.textContent = message;
                resultDiv.className = isSuccess ? 'success' : 'error';
                resultDiv.style.display = 'block';
            }
        });
    </script>
</body>
</html>
